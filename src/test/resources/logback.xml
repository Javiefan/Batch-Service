<?xml version="1.0" encoding="UTF-8"?>

<!-- ===================================== Split Line ======================================= -->
<!-- This configuration is for developers -->
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%15(%thread)] %highlight(%-5level) --- %-50(%cyan(%logger{30})) : %msg %n</pattern>
        </encoder>
    </appender>

    <!--<logger name="com.bwts.doc.api.service.TokenEmailService" level="INFO"/>-->
    <!--<logger name="com.bwts.doc.core.dao.mapper" level="DEBUG"/>-->

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>

